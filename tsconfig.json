{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx" // <-- ĐÂY LÀ DÒNG QUAN TRỌNG NHẤT ĐỂ SỬA LỖI CỦA BẠN
  },
  "include": [
    "src" // Chỉ yêu cầu TypeScript kiểm tra code trong thư mục 'src'
  ]
}
